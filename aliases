# Unix
alias git=hub

alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias v=vim
alias rmrf="rm -rf"

# git
alias gco="git checkout"
alias gs="git status"
alias gd='git diff'
alias gdh='git diff HEAD^'
alias gdc='git diff --cached'
alias gcm='git commit -m "'
alias ga='git add'
alias gaa='git add .'
alias ga.='git add .'
alias gc='git commit'
alias gl='git log'
alias gb='git branch'
alias gp='git pull'
alias gconflict='git diff --name-only --diff-filter=U'
# alias vgs='vim `git status --porcelain | sed -ne 's/.* //p'`'
alias vgc='vim `gconflict` -c "Gdiff"'
alias vgm='vim `gconflict` -c "Gdiff"'
alias ga.='git add .'
alias gstash='git stash show -p stash@{0}'

# Bundler
alias b="bundle"
alias be='bundle exec'

# Tests and Specs
alias test="ruby -I test"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias ret="RAILS_ENV=test"
alias rk="rake"
alias s="rspec"
alias fr="foreman run"
alias frc="foreman run rails console"
alias be="bundle exec"

# Zeus is awesome
