# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias ....='../../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"

# git
alias gci="git pull --rebase && rake && git push"
alias gco="git checkout"
alias gs="git status"
alias gd='git diff'
alias ga='git add'
alias gc='git commit'
alias gl='git log'
alias gp='git pull'
alias gconflict='git diff --name-only --diff-filter=U'


# Bundler
alias b="bundle"
alias be='bundle exec'

# Tests and Specs
alias t="ruby -I test"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias m="migrate"
alias rk="rake"
alias s="rspec"
alias fr="foreman run"
alias frc="foreman run rails console"
alias be="bundle exec"

# Pretty print the path
alias path="echo $PATH | tr -s ':' '\n'"

# Python
alias p3="python3"
