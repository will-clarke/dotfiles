# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias ....='../../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v=$EDITOR
alias n='nvim'
alias rmrf="rm -rf"

# git
alias gci="git pull --rebase && rake && git push"
alias gco="git checkout"
alias gr="git reset"
alias gs="git status"
alias gd='git diff'
alias gdh='git diff HEAD^'
alias gdc='git diff --cached'
alias gcm='git commit -m "'
alias ga='git add'
alias gaa='git add .'
alias gc='git commit'
alias gl='git log'
alias gb='git branch'
alias gp='git pull'
alias gconflict='git diff --name-only --diff-filter=U'
# alias vgs='vim `git status --porcelain | sed -ne 's/.* //p'`'
alias vgc='vim `gconflict` -c "Gdiff"'
alias vgm='vim `gconflict` -c "Gdiff"'
alias ga.='git add .'
alias gstash='git stash show -p stash@{0}'


# Bundler
alias b="bundle"
alias be='bundle exec'

# Tests and Specs
alias test="ruby -I test"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias ret="RAILS_ENV=test"
alias m="migrate"
alias rk="rake"
alias s="rspec"
alias fr="foreman run"
alias frc="foreman run rails console"
alias be="bundle exec"

# Zeus is awesome
alias zr="zeus rake"
alias zrun="zeus runner"
alias zc="zeus console"
alias zs="zeus server"
alias zg="zeus generate"
# alias zr="zeus destroy
alias zd="zeus dbconsole"
alias zt="zeus test"

# Pretty print the path
alias path="echo $PATH | tr -s ':' '\n'"

# Python
alias p3="python3"

# Lazy
alias aliases="v ~/.aliases"
alias vimrc="v ~/.vimrc"
alias dotfiles="cd ~/dotfiles"

# alias todolist="v ~/Dropbox/Apps/UpWord\ Notes/"
# alias todo="v ~/Dropbox/Apps/UpWord\ Notes/todo.txt"
alias t='/usr/local/Cellar/todo-txt/2.10/bin/todo.sh -d $HOME/Dropbox/todo/todo.cfg'
# emacs
alias e='open -a /Applications/Emacs.app $1'
alias ec='/Applications/Emacs.app/Contents/MacOS/bin/emacsclient'
