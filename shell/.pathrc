##### -*- mode:shell-script -*-

source_file_if_exists() {
    if [[ -e "$1" ]]; then
        source "$1"
    fi
}

add_to_path_if_directory_exists() {
    if [[ -d "$1" ]]; then
        export PATH="$1:$PATH"
    fi
}

if [ -n "$BASH_VERSION" ]; then
    source_file_if_exists "$HOME/.bashrc"
    source_file_if_exists "$HOME/.bashrc.local"
    source_file_if_exists "$HOME/.bash_profile.local"
fi

if [ -n "$ZSH_VERSION" ]; then
    source_file_if_exists "$HOME/.zshrc"
    source_file_if_exists "$HOME/.zshrc.local"
    source_file_if_exists "$HOME/.zprofile.local"
fi


source_file_if_exists "$HOME/.profile"
source_file_if_exists "$HOME/.profile.local"

add_to_path_if_directory_exists "PATH" "$HOME/Library/Haskell/bin"
add_to_path_if_directory_exists "PATH" "$HOME/go/bin"
add_to_path_if_directory_exists "PATH" "$HOME/dotfiles/bin"
add_to_path_if_directory_exists "PATH" "$HOME/.bin"
add_to_path_if_directory_exists "PATH" "$HOME/.bin.local"
add_to_path_if_directory_exists "PATH" "$HOME/.cargo/bin"
add_to_path_if_directory_exists "PATH" "/usr/local/sbin"
add_to_path_if_directory_exists "PATH" "$HOME/.cabal/bin"
