function random {
  echo $@ | tr ' ' '\n' | gshuf | head -n 1
}

function random_hashtags {
  hashtags="teamautofollow
  teamfollowback
  IFollowAll
  1000ADAY
  AlwaysFollowBack
  teamautofollow
  followxfollow
  followngain
  500ADAY
  spamforspam
  follow4follow
  f4f"

  echo random $hashtags
}

function follow {
  t search all random_hashtags | grep '^\s*@\w*\s*$' | xargs t follow
}

function twitter-unfollow {
  t leaders | xargs t unfollow
}
